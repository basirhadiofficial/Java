//to find the factorial of a number
public class PracticeLoops {
    public static void main(String[] args) {
        int factorial = 1;
        int n = 3;
        for (int i=1; i<=n; i++){
            factorial = factorial*i;
        }
        System.out.println(factorial);
    }
}


// to calculate the factorial of a number with recursion.
public class percentage_calc {
    static int LesserValue(int x){
        x = x-1;
        return x;
    }
    public static void main(String[] args) {
        int factorial = 5;
        int small = factorial;
        for (int i=1; i<5; i++) {
            small = LesserValue(small);
            factorial = factorial * small;
        }
        System.out.println(factorial);
    }
}
